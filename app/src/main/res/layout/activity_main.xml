<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:text="Adicionar Abastecimento"
        android:background="#ffffff"
        android:textStyle="bold"
        android:onClick="ClicouNoBotaoAddAbastecimento"
        android:id="@+id/BotaAddAbastecimento"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:text="Visualizar Abastecimentos"
        android:background="#ffffff"
        android:textStyle="bold"
        android:onClick="ClicouNoBotaoVisualizarAbastecimentos"
        android:id="@+id/BotaoVisualizarAbastecimentos"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Autonomia atual"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="144dp"
        android:gravity="center"
        android:id="@+id/autonomiaAtual"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:gravity="center|right"
            android:text="0"
            android:textSize="65dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/kmLitro"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="km/l"
            android:textColor="#000000"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/unidade"
            android:layout_toRightOf="@+id/kmLitro"
            />

    </RelativeLayout>
</LinearLayout>
